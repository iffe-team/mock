  .add-wrap
    h3 添加/修改：
      a.clear(href="javascript:void(0)" @click="clear")  新增
    ul
      li.url
        label(for="addUrl") url: /api/
        input#addUrl(type="text" v-model="url")
      li
        label(for="addContent") Mock:
        textarea#addContent(v-model="content" @keydown="writeContent")
      li
        a.submit(href="javascript:void(0)" @click="submitMock") 提交
  .mocklist-wrap
    h3 Mock List：(共 {{totalPage}} 条记录)
    ul
      li.item(v-for="item in mockList")
        a.go(href="/api/{{item}}" target="_blank") GO
        span.serial() {{$index + 1}}.
        a.apiHref(href="javascript:void(0)" @click="modifyMock(item)")  /api/{{item}}
        a.del(href="javascript:void(0)" @click="deleteMock(item)") 删

block scripts
  script(src='/javascripts/layer/layer.js')
